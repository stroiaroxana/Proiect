@page "/{id:int?}"
@model Proiect.Pages.Produse.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].DenumireProdus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Descriere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Pret)
            </th>
            <th> @Html.DisplayNameFor(model => model.Produs[0].PublishingDate) </th>
            <th>@Html.DisplayNameFor(model => model.Produs[0].Producator.NumeProducator) </th>
            <th>@Html.DisplayNameFor(model => model.Produs[0].CategoriiProdus)</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProdusD.Produse) {
    string selectedRow = ""; 
    if (item.ID == Model.ProdusID) 
    { 
        selectedRow = "table-success"; 
    }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.DenumireProdus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td> @Html.DisplayFor(modelItem => item.PublishingDate) </td>
            <td>@Html.DisplayFor(modelItem => item.Producator.NumeProducator) </td>
            <td>
            @{
                foreach (var category in item.CategoriiProdus)
                {
                    @category.Categorie.ID @:  @category.Categorie.NumeCategorie <br/>
            }
            }
            </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
}
    </tbody>
</table>
